<script src="https://cdnjs.cloudflare.com/ajax/libs/clipboard.js/1.7.1/clipboard.min.js"></script>

 <script>

  // set next element as target
  var clipboard = new Clipboard('.ss-clip', {
    target: function(trigger) {
      return trigger.nextElementSibling;
    }
  });

  function copied(elem, msg) {

    elem.setAttribute('class', msg + ' ss-clip');

    setTimeout(function () {
      elem.setAttribute('class', '' + 'ss-clip');
    }, 2000);

  }

  clipboard.on('success', function(e) {
    e.clearSelection();
    console.info('Action:', e.action);
    console.info('Text:', e.text);
    console.info('Trigger:', e.trigger);
    copied(e.trigger, 'is-copied');
  });

  clipboard.on('error', function(e) {
    console.error('Action:', e.action);
    console.error('Trigger:', e.trigger);
  });

  // open menu
  $(function() {
    $(".ss-docs__toggle").on("click", function(e) {
        if($(this).hasClass("nav")) {
            $("nav").addClass("is-open");
        }
        e.stopPropagation();
    });

    $("body:not('nav')").on("click", function(e) {
        $("nav").removeClass("is-open");
    });
  });



</script>
